<form class="form-horizontal" method="post" action='<%= @row.nil? ? "/create" : "/videos/#{@row['id']}" %>'>
  <fieldset>
    <legend>Add a video link</legend>
    <div class="control-group">
      <label class="control-label">Title</label>
      <div class="controls">
        <input type="text" name="name" class="input-xlarge" value="<%= @row['name'] if @row %>">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Description</label>
      <div class="controls">
        <input type="text" name="description" class="input-xlarge" value="<%= @row['description'] if @row %>">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">URL</label>
      <div class="controls">
        <input type="text" name="url" class="input-xlarge" value="<%= @row['url'] if @row %>">
        <p class="help-block">Paste only the URL of the video to add</p>
        <p class="help-block">Example: <strong>http://www.youtube.com/embed/z5Otla5157c</strong> </p>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Category</label>
      <div class="controls">
        <input type="text" name="category" class="input-xlarge" value="<%= @row['category'] if @row %>">
        <p class="help-block">Existing Categories:</p>
        <p class="help-block">
          <% @nav_rows.each do |row| %>
          |<%= row['category'] %>|
          <% end %>
        </p>
      </div>
    </div>
    <div class="form-actions">
      <button class="btn btn-primary"><%= @row.nil? ? "Add video" : "Edit video" %></button>
      <button class="btn">Cancel</button>
    </div>
  </fieldset>
</form>